{
  "packages": [
    "nodejs@22",
    "python@3.11",
    "ripgrep",
    "git",
    "ffmpeg"
  ],
  "shell": {
    "init_hook": [
      "if [ ! -d .venv ]; then python -m venv .venv; fi",
      "source .venv/bin/activate",
      "pip install -r requirements.txt",
      "echo 'Environment Ready: Node, Python, and FFmpeg loaded.'"
    ]
  }
}
